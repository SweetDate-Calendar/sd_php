{
  "name": "sweetdate/client",
  "description": "SweetDate PHP Client SDK",
  "type": "library",
  "license": "MIT",
  "require": {
    "php": "^8.1",
    "ext-sodium": "*",
    "guzzlehttp/guzzle": "^7.9",
    "psr/http-client": "^1.0",
    "psr/http-message": "^2.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5",
    "pestphp/pest": "^2.34",
    "phpstan/phpstan": "^1.11",
    "friendsofphp/php-cs-fixer": "^3.64"
  },
  "autoload": {
    "psr-4": {
      "SweetDate\\": "src/"
    }
  },
  "scripts": {
    "lint": "php-cs-fixer fix --dry-run --diff",
    "lint:fix": "php-cs-fixer fix",
    "stan": "phpstan analyse -c phpstan.neon || phpstan analyse src --level=max",
    "test": "vendor/bin/pest",
    "test:unit": "vendor/bin/pest -q --exclude-group=integration",
    "test:int": "vendor/bin/pest --group=integration",
    "test:conf": "vendor/bin/pest -q tools/conformance"
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  }
}