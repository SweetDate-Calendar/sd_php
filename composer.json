{
  "name": "sweetdate/client",
  "description": "SweetDate PHP Client SDK",
  "type": "library",
  "license": "MIT",
  "require": {
    "php": "^8.2",
    "guzzlehttp/guzzle": "^7.9",
    "psr/http-client": "^1.0",
    "psr/http-message": "^2.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.0",
    "pestphp/pest": "^3.0",
    "phpstan/phpstan": "^1.11",
    "friendsofphp/php-cs-fixer": "^3.64"
  },
  "autoload": { "psr-4": { "SweetDate\\": "src/" } },
  "scripts": {
    "test": "vendor/bin/pest -q",
    "stan": "phpstan analyse src --level=max",
    "lint": "php-cs-fixer fix --dry-run --diff"
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  }
}
